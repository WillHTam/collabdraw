    <script>
      var socket = io()

      $('.section').click(function () {
        console.log ('sent: ' + this.id)
        socket.emit('section', this.id)
      })

      socket.on('section', function(id) {
        console.log('id received: ' + id)
        // $("#"+id).append($('<h2>').text(id))
        // $("#"+id).css("background-color", "black")
        $("#"+id).toggleClass("toggler")
      })

